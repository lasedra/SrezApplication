<Page x:Class="SrezApp.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SrezApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="130">
            <TextBlock Text="Логин"/>
            <TextBox x:Name="LoginTextBox"/>
            <TextBlock Text="Пароль"/>
            <TextBox x:Name="PasswordTextBox"/>
            <Button Margin="10 20 10 10" Height="30" Click="Button_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
